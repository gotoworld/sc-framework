<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.hsd.util.dao.msg.IMsgEmailDao">
    <!-- 字段列表 -->
    <sql id="Base_Column_List">
         t1.id as "id"
        ,t1.sender as "sender"
        ,t1.recipient as "recipient"
        ,t1.subject as "subject"
        ,t1.scontent as "scontent"
        ,t1.lcontent as "lcontent"
        ,t1.files as "files"
        ,t1.date_send as "dateSend"
        ,t1.date_actual as "dateActual"
        ,t1.send_count as "sendCount"
        ,t1.state as "state"
    </sql>

    <!-- 根据主键获取信息详情 -->
    <select id="selectByPrimaryKey" resultType="com.hsd.util.entity.msg.MsgEmail" parameterType="com.hsd.util.entity.msg.MsgEmail">
        select
        <include refid="Base_Column_List"/>
        from msg_email t1
        where
        t1.id = #{id}
    </select>

    <!-- 新增单条数据 -->
    <insert id="insert" parameterType="com.hsd.util.entity.msg.MsgEmail"  useGeneratedKeys="true" keyProperty="id"  >
        insert into msg_email (
         
            sender 
           ,recipient 
           ,subject 
           ,scontent 
           ,lcontent 
           ,files 
           ,date_send 
           ,date_actual 
           ,send_count 
           ,state 
        ) values (
         
            #{sender} 
           ,#{recipient} 
           ,#{subject} 
           ,#{scontent} 
           ,#{lcontent} 
           ,#{files} 
           ,#{dateSend} 
           ,#{dateActual} 
           ,#{sendCount} 
           ,#{state} 
        )
    </insert>


    <!-- 数据更新 -->
    <update id="update" parameterType="com.hsd.util.entity.msg.MsgEmail">
        update msg_email set  
             <if test="sender!=null">,sender = #{sender}</if>
             <if test="recipient!=null">,recipient = #{recipient}</if>
             <if test="subject!=null">,subject = #{subject}</if>
             <if test="scontent!=null">,scontent = #{scontent}</if>
             <if test="lcontent!=null">,lcontent = #{lcontent}</if>
             <if test="files!=null">,files = #{files}</if>
             <if test="dateSend!=null">,date_send = #{dateSend}</if>
             <if test="dateActual!=null">,date_actual = #{dateActual}</if>
             <if test="sendCount!=null">,send_count = #{sendCount}</if>
             <if test="state!=null">,state = #{state}</if>
        where
        id = #{id}
    </update>

    <!--列表通用条件-->
    <sql id="list_where_sql">
    </sql>

    <!--信息分页 -->
    <select id="findDataIsPage" parameterType="com.hsd.util.entity.msg.MsgEmail" resultType="com.hsd.util.entity.msg.MsgEmail">
        select
        <include refid="Base_Column_List"/>
        from msg_email t1
        where 1=1
        <include refid="list_where_sql"/>
        
    </select>

    <!--信息列表 -->
    <select id="findDataIsList" parameterType="com.hsd.util.entity.msg.MsgEmail" resultType="com.hsd.util.entity.msg.MsgEmail">
        select
        <include refid="Base_Column_List"/>
        from msg_email t1
        where 1=1
        <include refid="list_where_sql"/>
        
    </select>
</mapper>