 <!-- 获取子地址列表 -->
	<select id="getSubAddress" parameterType="String" resultType="java.util.HashMap">
		select id,code,parentCode,name,lv from mall_china_map where parentCode=#{parentCode} order by code;
	</select>
	
	<!-- 获取所有子地址列表 ，包括下级的下级-->
	<select id="getSubAddress_all" parameterType="String" resultType="java.util.HashMap">
		select id,code,parentCode,name,lv from mall_china_map where code like #{parentCode}+"%" order by parentCode;
	</select>
	
	<!-- 根据级别获取地址列表-->
	<select id="getAddressByLevel" parameterType="String" resultType="java.util.HashMap">
		
		select id,code,parentCode,name,lv from mall_china_map where lv= #{level} order by parentCode
	</select>
	
	<!-- 模版设置获取省市-->
 	<select id="getAddressAll" parameterType="String" resultType="java.util.HashMap"> 
 		<![CDATA[
 		    select id,code,parentCode,name,lv from mall_china_map where lv <= #{level} order by parentCode
 		]]> 
 	</select> 
</mapper>