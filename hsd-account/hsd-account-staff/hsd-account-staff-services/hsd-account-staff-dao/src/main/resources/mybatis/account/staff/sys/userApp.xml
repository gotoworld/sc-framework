<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.hsd.account.staff.dao.sys.IUserAppDao">
    <!-- 字段列表 -->
    <sql id="Base_Column_List">
         t1.id as "id"
        ,t1.user_id as "userId"
        ,t1.app_id as "appId"
        ,t1.date_created as "dateCreated"
        ,t1.bi_update_ts as "biUpdateTs"
    </sql>

    <!-- 根据主键获取信息详情 -->
    <select id="selectByPrimaryKey" resultType="com.hsd.account.staff.entity.sys.UserApp" parameterType="com.hsd.account.staff.entity.sys.UserApp">
        select
        <include refid="Base_Column_List"/>
        from user_app t1
        where  t1.id = #{id}
    </select>

    <!-- 新增单条数据 -->
    <insert id="insert" parameterType="com.hsd.account.staff.entity.sys.UserApp"  >
        insert into user_app (
            id 
           ,user_id 
           ,app_id 
           ,date_created 
           ,bi_update_ts 
        ) values (
            #{id} 
           ,#{userId} 
           ,#{appId} 
           ,now()
           ,now()
        )
    </insert>


    <!-- 数据更新 -->
    <update id="update" parameterType="com.hsd.account.staff.entity.sys.UserApp">
        update user_app set bi_update_ts=now()
        <if test="user_id!=null">,user_id = #{userId}</if>
        <if test="app_id!=null">,app_id = #{appId}</if>
        where
        id = #{id}
    </update>

    <!--列表通用条件-->
    <sql id="list_where_sql">
        <if test="keyword!=null and keyword!=''">
            and t1.name like concat('%',#{keyword},'%')
        </if>
        <if test="dateBegin!=null and dateBegin!=''">
            <![CDATA[ and DATE_FORMAT(t1.date_created,'%Y-%m-%d')>=DATE_FORMAT(#{dateBegin},'%Y-%m-%d') ]]>
        </if>
        <if test="dateEnd!=null and dateEnd!=''">
            <![CDATA[ and DATE_FORMAT(t1.date_created,'%Y-%m-%d')<=DATE_FORMAT(#{dateEnd},'%Y-%m-%d') ]]>
        </if>
    </sql>

    <!--信息分页 -->
    <select id="findDataIsPage" parameterType="com.hsd.account.staff.entity.sys.UserApp" resultType="com.hsd.account.staff.entity.sys.UserApp">
        select
        <include refid="Base_Column_List"/>
        from user_app t1
        where 1=1
        <include refid="list_where_sql"/>
        order by t1.date_created desc
    </select>

    <!--信息列表 -->
    <select id="findDataIsList" parameterType="com.hsd.account.staff.entity.sys.UserApp" resultType="com.hsd.account.staff.entity.sys.UserApp">
        select
        <include refid="Base_Column_List"/>
        from user_app t1
        where 1=1
        <include refid="list_where_sql"/>
        order by t1.date_created desc
    </select>

    <select id="findDataByAppIdAndUserId" resultType="com.hsd.account.staff.entity.sys.UserApp" parameterType="com.hsd.account.staff.entity.sys.UserApp">
        select
         t1.id as "id"
        ,t1.user_id as "userId"
        ,t1.app_id as "appId"
        from user_app t1
        where  t1.user_id = #{userId}
        AND  t1.app_id =#{appId}
    </select>
</mapper>