<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="cn.com.baseos.dao.daointer.adi.IAreaDao" >
<!-- 
	/**
	 * <p>信息列表。</p>
	 * <ol>[功能概要] 
	 * <div>信息检索。</div>
	 * <div>列表 省。</div>
	 * </ol>
	 * @return 处理结果
	 */
	public List<java.util.HashMap> findDataIsListA(Map<String,String> map);
 -->
 <select id="findDataIsListA" parameterType="java.util.HashMap" resultType="java.util.HashMap">
 	select province_id as id,province_name as name from t_adi_province 
 	order by sort_num asc
 </select>
 <!-- 
	/**
	 * <p>信息列表。</p>
	 * <ol>[功能概要] 
	 * <div>信息检索。</div>
	 * <div>列表 市。</div>
	 * </ol>
	 * @return 处理结果
	 */
	public List<java.util.HashMap> findDataIsListB(Map<String,String> map);
 -->
 <select id="findDataIsListB" parameterType="java.util.HashMap" resultType="java.util.HashMap">
 	select city_id as id,city_name as name from t_adi_city
 	where city_id like concat(#{id},'%') 
 	order by sort_num asc
 </select>
