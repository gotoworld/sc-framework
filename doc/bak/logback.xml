<?xml version="1.0" encoding="UTF-8"?>
<configuration>  
	<contextListener class="ch.qos.logback.classic.jul.LevelChangePropagator">
        <resetJUL>true</resetJUL>
    </contextListener>
    <!-- To enable JMX Management -->
    <jmxConfigurator />
    <!-- 打印到控制台 -->
	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
	 <!-- encoder 默认配置为PatternLayoutEncoder -->
	 <layout class="ch.qos.logback.classic.PatternLayout">
		 <Pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{40} - %msg%n</Pattern>
	 </layout>
	</appender>
	
	<!-- 打印日志到文件 -->
	<!-- 所有日志 -->
	<appender name="AllLog" class="ch.qos.logback.core.rolling.RollingFileAppender">
	 <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
		 <fileNamePattern>/home/logs/all/%d{yyyy-MM-dd}.log</fileNamePattern>
		 <maxHistory>30</maxHistory>
	 </rollingPolicy>
	 <encoder>
		 <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{40} - %msg%n</pattern>
	 </encoder>
	</appender>
	<!-- 错误日志 -->
	<appender name="Errorlog" class="ch.qos.logback.core.rolling.RollingFileAppender">
	 <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
		 <fileNamePattern>/home/logs/error/%d{yyyy-MM-dd}.log</fileNamePattern>
		 <maxHistory>30</maxHistory>
	 </rollingPolicy>
	 <encoder>
		 <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{40} - %msg%n</pattern>
	 </encoder>
	</appender>
	<!--  Spring -->
	<logger name="org.springframework" level="WARN" /> 
	<logger name="org.springframework.beans" level="WARN" />
	<!-- 显示SQL语句部分 -->
	<logger name="cn.com.baseos" level="INFO" /> 
	<!--  mybatis loggers  -->
	<logger name="com.ibatis" level="DEBUG,stdout" />
	<logger name="com.ibatis.common.jdbc.SimpleDataSource" level="DEBUG,stdout" />
	<logger name="com.ibatis.common.jdbc.ScriptRunner" level="DEBUG,stdout" />
	<logger name="com.ibatis.sqlmap.engine.impl.SqlMapClientDelegate" level="DEBUG,stdout" />
	<!--  sql loggers -->
	<logger name="java.sql.Connection" level="DEBUG,stdout" />
	<logger name="java.sql.Statement" level="DEBUG,stdout" />
	<logger name="java.sql.PreparedStatement" level="DEBUG,stdout" />
	<logger name="java.sql.ResultSet" level="DEBUG,stdout" />
	<!--  General Apache libraries -->
	<logger name="org.apache" level="WARN" />
	<!--  Default Shiro logging -->
	<logger name="org.apache.shiro" level="WARN" />
	<!--  Disable verbose logging -->
	<logger name="org.apache.shiro.util.ThreadContext" level="WARN" />
	<logger name="org.apache.shiro.cache.ehcache.EhCache" level="WARN" />
	
	
	<!-- 常用级别：ERROR 、WARN 、INFO 、DEBUG 、TRACE -->
	<root level="INFO">
	   <appender-ref ref="STDOUT" />
<!-- 	   <appender-ref ref="AllLog" /> -->
	</root>
	
	<!-- 为某个包下的所有类指定Appender 这里也可以指定类名称例如：cn.com.baseos.xx.ClassName -->
<!-- 	<logger name="cn.com.baseos" level="ERROR" > -->
<!-- 	  <appender-ref ref="Errorlog" /> -->
<!-- 	</logger> -->
</configuration>