<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.hsd.account.actor.dao.user.IUserrLoginLogDao">
    <!-- 字段列表 -->
    <sql id="Base_Column_List">
         t1.id as "id"
        ,t1.user_id as "userId"
        ,t1.user_name as "userName"
        ,t1.type as "type"
        ,t1.ip_addr as "ipAddr"
        ,t1.device_mac as "deviceMac"
        ,t1.date_created as "dateCreated"
    </sql>

    <!-- 根据主键获取信息详情 -->
    <select id="selectByPrimaryKey" resultType="com.hsd.account.actor.entity.user.UserrLoginLog" parameterType="com.hsd.account.actor.entity.user.UserrLoginLog">
        select
        <include refid="Base_Column_List"/>
        from userr_login_log t1
        where
        t1.id = #{id}
    </select>

    <!-- 新增单条数据 -->
    <insert id="insert" parameterType="com.hsd.account.actor.entity.user.UserrLoginLog"  useGeneratedKeys="true" keyProperty="id"  >
        insert into userr_login_log (
         
            user_id 
           ,user_name 
           ,type 
           ,ip_addr 
           ,device_mac 
           ,date_created 
        ) values (
         
            #{userId} 
           ,#{userName} 
           ,#{type} 
           ,#{ipAddr} 
           ,#{deviceMac} 
           ,now()
        )
    </insert>



    <!--列表通用条件-->
    <sql id="list_where_sql">
        and t1.user_id = #{userId}
        <if test="dateBegin!=null and dateBegin!=''">
            <![CDATA[ and DATE_FORMAT(t1.date_created,'%Y-%m-%d')>=DATE_FORMAT(#{dateBegin},'%Y-%m-%d') ]]>
        </if>
        <if test="dateEnd!=null and dateEnd!=''">
            <![CDATA[ and DATE_FORMAT(t1.date_created,'%Y-%m-%d')<=DATE_FORMAT(#{dateEnd},'%Y-%m-%d') ]]>
        </if>
    </sql>

    <!--信息分页 -->
    <select id="findDataIsPage" parameterType="com.hsd.account.actor.entity.user.UserrLoginLog" resultType="com.hsd.account.actor.entity.user.UserrLoginLog">
        select
        <include refid="Base_Column_List"/>
        from userr_login_log t1
        where 1=1
        <include refid="list_where_sql"/>
        order by t1.date_created desc
    </select>

</mapper>