<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.hsd.account.dao.sys.ISysMenuDao">
    <!-- 字段列表 -->
    <sql id="Base_Column_List">
         t1.id as "id"
        ,t1.name as "name"
        ,t1.domain_code as "domainCode"
        ,t1.parent_id as "parentId"
        ,t1.root as "root"
        ,t1.url as "url"
        ,t1.order_no as "orderNo"
        ,t1.version as "version"
        ,t1.del_flag as "delFlag"
        ,t1.date_created as "dateCreated"
        ,t1.date_updated as "dateUpdated"
        ,t1.bi_update_ts as "biUpdateTs"
    </sql>

    <!-- 根据主键获取信息详情 -->
    <select id="selectByPrimaryKey" resultType="com.hsd.account.entity.sys.SysMenu" parameterType="com.hsd.account.entity.sys.SysMenu">
        select
        <include refid="Base_Column_List"/>
        from sys_menu t1
        where
        t1.id = #{id}
    </select>

    <!-- 新增单条数据 -->
    <insert id="insert" parameterType="com.hsd.account.entity.sys.SysMenu"  useGeneratedKeys="true" keyProperty="id"  >
        insert into sys_menu (
         
            name 
           ,domain_code 
           ,parent_id 
           ,root 
           ,url 
           ,order_no 
           ,version 
           ,del_flag 
           ,date_created 
           ,date_updated 
           ,bi_update_ts 
        ) values (
         
            #{name} 
           ,#{domainCode} 
           ,#{parentId} 
           ,#{root} 
           ,#{url} 
           ,#{orderNo} 
           ,0
           ,0
           ,now()
           ,#{dateUpdated} 
           ,now()
        )
    </insert>


    <!-- 数据更新 -->
    <update id="update" parameterType="com.hsd.account.entity.sys.SysMenu">
        update sys_menu set bi_update_ts=now() ,version=version+1
             <if test="name!=null">,name = #{name}</if>
             <if test="domainCode!=null">,domain_code = #{domainCode}</if>
             <if test="parentId!=null">,parent_id = #{parentId}</if>
             <if test="root!=null">,root = #{root}</if>
             <if test="url!=null">,url = #{url}</if>
             <if test="orderNo!=null">,order_no = #{orderNo}</if>
             <if test="dateUpdated!=null">,date_updated = #{dateUpdated}</if>
        where
        id = #{id}
    </update>

    <!--列表通用条件-->
    <sql id="list_where_sql">
        <choose>
            <when test="delFlag!=null">
                and t1.del_flag=#{delFlag}
            </when>
            <otherwise>
                and t1.del_flag=0
            </otherwise>
        </choose>
        <if test="dateBegin!=null and dateBegin!=''">
            <![CDATA[ and DATE_FORMAT(t1.date_created,'%Y-%m-%d')>=DATE_FORMAT(#{dateBegin},'%Y-%m-%d') ]]>
        </if>
        <if test="dateEnd!=null and dateEnd!=''">
            <![CDATA[ and DATE_FORMAT(t1.date_created,'%Y-%m-%d')<=DATE_FORMAT(#{dateEnd},'%Y-%m-%d') ]]>
        </if>
    </sql>

    <!--信息分页 -->
    <select id="findDataIsPage" parameterType="com.hsd.account.entity.sys.SysMenu" resultType="com.hsd.account.entity.sys.SysMenu">
        select
        <include refid="Base_Column_List"/>
        from sys_menu t1
        where 1=1
        <include refid="list_where_sql"/>
        order by t1.date_created desc
    </select>

    <!--信息列表 -->
    <select id="findDataIsList" parameterType="com.hsd.account.entity.sys.SysMenu" resultType="com.hsd.account.entity.sys.SysMenu">
        select
        <include refid="Base_Column_List"/>
        from sys_menu t1
        where 1=1
        <include refid="list_where_sql"/>
        order by t1.date_created desc
    </select>
</mapper>