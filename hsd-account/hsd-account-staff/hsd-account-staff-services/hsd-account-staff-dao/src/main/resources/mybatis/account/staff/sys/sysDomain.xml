<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.hsd.account.staff.dao.sys.ISysDomainDao">
    <!-- 字段列表 -->
    <sql id="Base_Column_List">
         t1.code as "code"
        ,t1.name as "name"
        ,t1.dns as "dns"
        ,t1.is_show as "isShow"
        ,t1.memo as "memo"
        ,t1.order_no as "orderNo"
        ,t1.version as "version"
        ,t1.keyword as "keyword"
        ,t1.del_flag as "delFlag"
        ,t1.create_id as "createId"
        ,t1.date_created as "dateCreated"
        ,t1.date_updated as "dateUpdated"
        ,t1.bi_update_ts as "biUpdateTs"
    </sql>

    <!-- 根据主键获取信息详情 -->
    <select id="selectByPrimaryKey" resultType="com.hsd.account.staff.entity.sys.SysDomain" parameterType="com.hsd.account.staff.entity.sys.SysDomain">
        select
        <include refid="Base_Column_List"/>
        from sys_domain t1
        where
        t1.code = #{code}
    </select>

    <!-- 新增单条数据 -->
    <insert id="insert" parameterType="com.hsd.account.staff.entity.sys.SysDomain"  >
        insert into sys_domain (
            code 
           ,name 
           ,dns 
           ,is_show 
           ,memo 
           ,order_no 
           ,version 
           ,keyword 
           ,del_flag 
           ,create_id 
           ,date_created 
           ,date_updated 
           ,bi_update_ts 
        ) values (
            #{code} 
           ,#{name} 
           ,#{dns} 
           ,#{isShow} 
           ,#{memo} 
           ,#{orderNo} 
           ,0
           ,#{keyword} 
           ,0
           ,#{createId} 
           ,now()
           ,now()
           ,now()
        )
    </insert>


    <!-- 数据更新 -->
    <update id="update" parameterType="com.hsd.account.staff.entity.sys.SysDomain">
        update sys_domain set date_updated=now() ,version=version+1
             <if test="name!=null">,name = #{name}</if>
             <if test="dns!=null">,dns = #{dns}</if>
             <if test="isShow!=null">,is_show = #{isShow}</if>
             <if test="memo!=null">,memo = #{memo}</if>
             <if test="orderNo!=null">,order_no = #{orderNo}</if>
             <if test="keyword!=null">,keyword = #{keyword}</if>
        where
        code = #{code}
    </update>

    <!--列表通用条件-->
    <sql id="list_where_sql">
        <choose>
            <when test="delFlag!=null">
                and t1.del_flag=#{delFlag}
            </when>
            <otherwise>
                and t1.del_flag=0
            </otherwise>
        </choose>
        <if test="dateBegin!=null and dateBegin!=''">
            <![CDATA[ and DATE_FORMAT(t1.date_created,'%Y-%m-%d')>=DATE_FORMAT(#{dateBegin},'%Y-%m-%d') ]]>
        </if>
        <if test="dateEnd!=null and dateEnd!=''">
            <![CDATA[ and DATE_FORMAT(t1.date_created,'%Y-%m-%d')<=DATE_FORMAT(#{dateEnd},'%Y-%m-%d') ]]>
        </if>
    </sql>

    <!--信息分页 -->
    <select id="findDataIsPage" parameterType="com.hsd.account.staff.entity.sys.SysDomain" resultType="com.hsd.account.staff.entity.sys.SysDomain">
        select
        <include refid="Base_Column_List"/>
        from sys_domain t1
        where 1=1
        <include refid="list_where_sql"/>
        order by t1.date_created desc
    </select>

    <!--信息列表 -->
    <select id="findDataIsList" parameterType="com.hsd.account.staff.entity.sys.SysDomain" resultType="com.hsd.account.staff.entity.sys.SysDomain">
        select
        <include refid="Base_Column_List"/>
        from sys_domain t1
        where 1=1
        <include refid="list_where_sql"/>
        order by t1.date_created desc
    </select>
</mapper>