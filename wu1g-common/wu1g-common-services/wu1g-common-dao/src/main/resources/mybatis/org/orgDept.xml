<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.wu1g.dao.org.IOrgDeptDao">
    <!-- 字段列表 -->
    <sql id="Base_Column_List">
		 t1.id as  "id"
        ,t1.code as  "code"
        ,t1.name as  "name"
        ,t1.parent_id as  "parentId"
        ,t1.state as  "state"
        ,t1.memo as  "memo"
        ,t1.version as  "version"
        ,t1.order_no as  "orderNo"
        ,t1.keyword as  "keyword"
        ,t1.del_flag as  "delFlag"
        ,t1.create_id as  "createId"
        ,t1.date_created as  "dateCreated"
        ,t1.date_updated as  "dateUpdated"
	</sql>
    <!-- 根据主键获取信息详情 -->
    <select id="selectByPrimaryKey" resultType="com.wu1g.vo.org.OrgDept" parameterType="com.wu1g.vo.org.OrgDept">
        select
        <include refid="Base_Column_List"/>
        from org_dept t1
        where t1.id = #{id}
    </select>
    <!-- 根据主键物理删除信息 -->
    <delete id="deleteByPrimaryKey" parameterType="com.wu1g.vo.org.OrgDept">
		delete
		from org_dept
		where  id = #{id}
	</delete>
    <!-- 新增单条数据 -->
    <insert id="insert" parameterType="com.wu1g.vo.org.OrgDept" useGeneratedKeys="true" keyProperty="id">
		insert into org_dept(
             code
            ,name
            ,parent_id
            ,state
            ,memo
            ,version
            ,order_no
            ,keyword
            ,del_flag
            ,create_id
            ,date_created
            ,date_updated
        ) values (
             #{code}
            ,#{name}
            ,#{parentId}
            ,#{state}
            ,#{memo}
            ,0
            ,0
            ,#{keyword}
            ,0
            ,#{createId}
            ,now()
            ,now()
        )
	</insert>
    <!-- 数据更新 -->
    <update id="update" parameterType="com.wu1g.vo.org.OrgDept">
        update org_dept set
        version=version+1,date_updated=now()
        <if test="name!= null">,name=#{name}</if>
        <if test="code!= null">,code=#{code}</if>
        <if test="parentId!= null and parentId!='-999'.toString()">,parent_id=#{parentId}</if>
        <if test="state!= null">,state=#{state}</if>
        <if test="memo!= null">,memo=#{memo}</if>
        <if test="orderNo!= null">,order_no=#{orderNo}</if>
        <if test="keyword!= null">,keyword=#{keyword}</if>
        where id = #{id}
    </update>
    <!-- 判断是否存在 -->
    <select id="isDataYN" parameterType="com.wu1g.vo.org.OrgDept" resultType="int">
		select count(0) from org_dept where  id = #{id}
	</select>
    <!--列表通用条件-->
    <sql id="list_where_sql">
        <choose>
            <when test="delFlag!=null">
                and t1.del_flag=#{delFlag}
            </when>
            <otherwise>
                and t1.del_flag=0
            </otherwise>
        </choose>
        <if test="dateBegin!=null and dateBegin!=''">
            <![CDATA[ and DATE_FORMAT(t1.date_created,'%Y-%m-%d')>=DATE_FORMAT(#{dateBegin},'%Y-%m-%d')]]>
        </if>
        <if test="dateEnd!=null and dateEnd!=''">
            <![CDATA[ and DATE_FORMAT(t1.date_created,'%Y-%m-%d')<=DATE_FORMAT(#{dateEnd},'%Y-%m-%d')]]>
        </if>
    </sql>
    <!--信息列表 分页 -->
    <select id="findDataIsPage" parameterType="com.wu1g.vo.org.OrgDept" resultType="com.wu1g.vo.org.OrgDept">
        select
        <include refid="Base_Column_List"/>
        from org_dept t1
        where 1=1
        <include refid="list_where_sql"/>
    </select>
    <!--信息列表 -->
    <select id="findDataIsList" parameterType="com.wu1g.vo.org.OrgDept" resultType="com.wu1g.vo.org.OrgDept">
        select
         t1.id as  "id"
        ,t1.code as  "code"
        ,t1.name as  "name"
        ,t1.parent_id as  "parentId"
        ,t1.memo as  "memo"
        from org_dept t1
        where 1=1
        <include refid="list_where_sql"/>
    </select>
    <!-- 逻辑删除 -->
    <update id="deleteById" parameterType="com.wu1g.vo.org.OrgDept">
		update org_dept set
		version=version+1,date_updated=now()
		,del_flag=1
		where  id = #{id}
	</update>
    <!-- 恢复逻辑删除 -->
    <update id="recoveryDataById" parameterType="com.wu1g.vo.org.OrgDept">
		update org_dept set
		version=version+1,date_updated=now()
		,del_flag=0
		where  id = #{id}
	</update>
    <!-- 获取用户所在部门集合>根据用户id -->
    <select id="getDeptListByUId" parameterType="map" resultType="com.wu1g.vo.org.OrgDept">
        select
        <include refid="Base_Column_List"/>
        from org_dept t1
        left join org_dept_vs_user t2 on (t1.id=t2.dept_id)
        where t1.del_flag=0 and t2.user_id=#{uid}
    </select>
</mapper>