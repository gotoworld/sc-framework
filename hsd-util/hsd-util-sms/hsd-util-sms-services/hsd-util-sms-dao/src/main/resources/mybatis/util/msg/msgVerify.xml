<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.hsd.util.dao.msg.IMsgVerifyDao">
    <!-- 字段列表 -->
    <sql id="Base_Column_List">
         t1.id as "id"
        ,t1.verify_code as "verifyCode"
        ,t1.sms_address as "smsAddress"
        ,t1.sms_type as "smsType"
        ,t1.date_created as "dateCreated"
        ,t1.data_expire as "dataExpire"
        ,t1.date_using as "dateUsing"
        ,t1.ip_address as "ipAddress"
        ,t1.state as "state"
    </sql>

    <!-- 根据主键获取信息详情 -->
    <select id="selectByPrimaryKey" resultType="com.hsd.util.entity.msg.MsgVerify" parameterType="com.hsd.util.entity.msg.MsgVerify">
        select
        <include refid="Base_Column_List"/>
        from msg_verify t1
        where
        t1.id = #{id}
    </select>

    <!-- 新增单条数据 -->
    <insert id="insert" parameterType="com.hsd.util.entity.msg.MsgVerify"  useGeneratedKeys="true" keyProperty="id"  >
        insert into msg_verify (
         
            verify_code 
           ,sms_address 
           ,sms_type 
           ,date_created 
           ,data_expire 
           ,date_using 
           ,ip_address 
           ,state 
        ) values (
         
            #{verifyCode} 
           ,#{smsAddress} 
           ,#{smsType} 
           ,now()
           ,#{dataExpire} 
           ,#{dateUsing} 
           ,#{ipAddress} 
           ,#{state} 
        )
    </insert>


    <!-- 数据更新 -->
    <update id="update" parameterType="com.hsd.util.entity.msg.MsgVerify">
        update msg_verify set  
             <if test="verifyCode!=null">,verify_code = #{verifyCode}</if>
             <if test="smsAddress!=null">,sms_address = #{smsAddress}</if>
             <if test="smsType!=null">,sms_type = #{smsType}</if>
             <if test="dataExpire!=null">,data_expire = #{dataExpire}</if>
             <if test="dateUsing!=null">,date_using = #{dateUsing}</if>
             <if test="ipAddress!=null">,ip_address = #{ipAddress}</if>
             <if test="state!=null">,state = #{state}</if>
        where
        id = #{id}
    </update>

    <!--列表通用条件-->
    <sql id="list_where_sql">
        <if test="dateBegin!=null and dateBegin!=''">
            <![CDATA[ and DATE_FORMAT(t1.date_created,'%Y-%m-%d')>=DATE_FORMAT(#{dateBegin},'%Y-%m-%d') ]]>
        </if>
        <if test="dateEnd!=null and dateEnd!=''">
            <![CDATA[ and DATE_FORMAT(t1.date_created,'%Y-%m-%d')<=DATE_FORMAT(#{dateEnd},'%Y-%m-%d') ]]>
        </if>
    </sql>

    <!--信息分页 -->
    <select id="findDataIsPage" parameterType="com.hsd.util.entity.msg.MsgVerify" resultType="com.hsd.util.entity.msg.MsgVerify">
        select
        <include refid="Base_Column_List"/>
        from msg_verify t1
        where 1=1
        <include refid="list_where_sql"/>
        order by t1.date_created desc
    </select>

    <!--信息列表 -->
    <select id="findDataIsList" parameterType="com.hsd.util.entity.msg.MsgVerify" resultType="com.hsd.util.entity.msg.MsgVerify">
        select
        <include refid="Base_Column_List"/>
        from msg_verify t1
        where 1=1
        <include refid="list_where_sql"/>
        order by t1.date_created desc
    </select>
</mapper>