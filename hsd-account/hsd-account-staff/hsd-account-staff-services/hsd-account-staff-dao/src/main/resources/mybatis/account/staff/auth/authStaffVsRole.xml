<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.hsd.account.staff.dao.auth.IAuthStaffVsRoleDao">
    <!-- 新增 批量数据 -->
    <insert id="insertBatch"  >
        insert into auth_staff_vs_role (
         staff_id
        ,role_id
        ,create_id
        ,date_created
        ) values
        <foreach collection="list" item="t" separator=",">
            (
             #{t.staffId}
            ,#{t.roleId}
            ,#{t.createId}
            ,now()
            )
        </foreach>
    </insert>

    <insert id="insert"  >
        insert into auth_staff_vs_role (
         staff_id
        ,role_id
        ,create_id
        ,date_created
        ) values (
         #{staffId}
        ,#{roleId}
        ,#{createId}
        ,now()
        )
    </insert>

    <select id="findStaffRoleIsList" parameterType="com.hsd.account.staff.entity.auth.AuthStaffVsRole" resultType="com.hsd.account.staff.dto.auth.AuthRoleDto">
      select
         t2.id as "id"
        ,t2.name as "name"
        ,t2.is_super as "isSuper"
      from auth_staff_vs_role t1
      inner join auth_role t2 on (t1.role_id=t2.id and t2.del_flag=0)
      where t1.staff_id=#{staffId}
    </select>

    <select id="findOrgRoleIsList" parameterType="com.hsd.account.staff.entity.auth.AuthStaffVsRole" resultType="com.hsd.account.staff.dto.auth.AuthRoleDto">
      select
         DISTINCT(t3.id) as "id"
        ,t3.name as "name"
        ,t3.is_super as "isSuper"
      from org_org_vs_staff t1
      inner join org_org_vs_role t2 on (t1.org_id=t2.org_id)
      inner join auth_role t3 on (t2.role_id=t3.id and t3.del_flag=0)
      where t1.staff_id=#{staffId}
    </select>
</mapper>