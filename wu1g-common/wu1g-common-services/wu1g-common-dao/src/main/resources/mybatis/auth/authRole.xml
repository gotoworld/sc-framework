<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.wu1g.dao.auth.IAuthRoleDao">
    <!-- 字段列表 -->
    <sql id="Base_Column_List">
		 t1.id as  "id"
        ,t1.name as  "name"
        ,t1.is_super as  "isSuper"
        ,t1.memo as  "memo"
        ,t1.order_no as  "orderNo"
        ,t1.version as  "version"
        ,t1.keyword as  "keyword"
        ,t1.del_flag as  "delFlag"
        ,t1.date_created as  "dateCreated"
        ,t1.date_updated as  "dateUpdated"
	</sql>
    <!-- 根据主键获取信息详情 -->
    <select id="selectByPrimaryKey" resultType="authRole" parameterType="authRole">
        select
        <include refid="Base_Column_List"/>
        from auth_role t1
        where t1.id = #{id}
    </select>
    <!-- 根据主键物理删除信息 -->
    <delete id="deleteByPrimaryKey" parameterType="authRole">
		delete
		from auth_role
		where  id = #{id}
	</delete>
    <!-- 新增单条数据 -->
    <insert id="insert" parameterType="authRole" useGeneratedKeys="true" keyProperty="id">
		insert into auth_role(
             name
            ,is_super
            ,memo
            ,order_no
            ,version
            ,keyword
            ,del_flag
            ,date_created
            ,date_updated
        ) values (
             #{name}
            ,#{isSuper}
            ,#{memo}
            ,0
            ,0
            ,#{keyword}
            ,0
            ,now()
            ,now()
        )
	</insert>
    <!-- 数据更新 -->
    <update id="update" parameterType="authRole">
        update auth_role set version=version+1,date_updated=now()
        <if test="name!= null" >,name=#{name}</if>
        <if test="isSuper!= null" >,is_super=#{isSuper}</if>
        <if test="memo!= null" >,memo=#{memo}</if>
        <if test="orderNo!= null" >,order_no=#{orderNo}</if>
        <if test="keyword!= null" >,keyword=#{keyword}</if>
        where id = #{id}
    </update>
    <!-- 判断是否存在 -->
    <select id="isDataYN" parameterType="authRole" resultType="int">
		select count(0) from auth_role where  id = #{id}
	</select>
    <!--列表通用条件-->
    <sql id="list_where_sql">
        <choose>
            <when test="delFlag!=null">
                and t1.del_flag=#{delFlag}
            </when>
            <otherwise>
                and t1.del_flag=0
            </otherwise>
        </choose>
        <if test="name!=null and name!=''">
            and t1.name like CONCAT('%',#{name},'%')
        </if>
        <if test="isSuper!=null and isSuper==0">
            and t1.is_super!=1
        </if>
        <if test="dateBegin!=null and dateBegin!=''">
            <![CDATA[ and DATE_FORMAT(t1.date_created,'%Y-%m-%d')>=DATE_FORMAT(#{dateBegin},'%Y-%m-%d')]]>
        </if>
        <if test="dateEnd!=null and dateEnd!=''">
            <![CDATA[ and DATE_FORMAT(t1.date_created,'%Y-%m-%d')<=DATE_FORMAT(#{dateEnd},'%Y-%m-%d')]]>
        </if>
    </sql>
    <!--信息列表 分页 -->
    <select id="findDataIsPage" parameterType="authRole" resultType="authRole">
        select
        <include refid="Base_Column_List"/>
        from auth_role t1
        where t1.id!=1
        <include refid="list_where_sql"/>
    </select>
    <!--信息列表 -->
    <select id="findDataIsList" parameterType="authRole" resultType="authRole">
        select
        <include refid="Base_Column_List"/>
        from auth_role t1
        where t1.id!=1
        <include refid="list_where_sql"/>
    </select>
    <!-- 逻辑删除 -->
    <update id="deleteById" parameterType="authRole">
		update auth_role set
		version=version+1,date_updated=now()
		,del_flag=1
		where  id = #{id} and is_super!=1
	</update>
    <!-- 恢复逻辑删除 -->
    <update id="recoveryDataById" parameterType="authRole">
		update auth_role set
		version=version+1,date_updated=now()
		,del_flag=0
		where  id = #{id}
	</update>

    <!-- 角色信息列表>根据用户id -->
    <select id="getRoleListByUId" resultType="authRole" parameterType="map">
        <choose>
            <when test="iissuperman==1"><!-- i'm superman -->
                select
                <include refid="Base_Column_List"/>
                from auth_role t1
                where t1.del_flag=0 and t1.is_super!='1'
            </when>
            <otherwise>
                select
                <include refid="Base_Column_List"/>
                from auth_role t1
                inner join auth_user_vs_role t2 on (t1.id=t2.role_id)
                where t1.del_flag=0 and t2.user_id=#{uid} and t1.is_super!='1'
            </otherwise>
        </choose>
    </select>
    <!-- 根据用户id,判断用户是否为超级管理员,要的就是特权. -->
    <select id="isSuperAdmin" resultType="int" parameterType="map">
		select count(0) from auth_role t1
		inner join auth_user_vs_role t2 on (t1.id=t2.role_id)
		where t2.user_id=#{uid} and t1.is_super=1
	</select>
</mapper>