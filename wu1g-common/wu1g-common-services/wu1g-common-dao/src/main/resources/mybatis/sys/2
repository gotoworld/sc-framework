(
   select t.num from (
      select (IFNULL(max(order_no),0)+1) as num from sys_category
      where
    <choose>
        <when test="parentId!=null">
            parent_id=#{parentId}
        </when>
        <otherwise>
            parent_id is null or parent_id =''
        </otherwise>
    </choose>
   ) t
)