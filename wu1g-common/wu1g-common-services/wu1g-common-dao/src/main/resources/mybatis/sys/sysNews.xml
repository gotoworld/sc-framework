<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.wu1g.dao.sys.ISysNewsDao">
    <!-- 字段列表 -->
    <sql id="Base_Column_List">
         t1.id as "id"
        ,t1.title as "title"
        ,t1.second_title as "secondTitle"
        ,t1.cover_pic as "coverPic"
        ,t1.brief_info as "briefInfo"
        ,t1.is_ontop as "isOntop"
        ,t1.click_count as "clickCount"
        ,t1.state as "state"
        ,t1.memo as "memo"
        ,t1.version as "version"
        ,t1.order_no as "orderNo"
        ,t1.keyword as "keyword"
        ,t1.del_flag as "delFlag"
        ,t1.create_id as "createId"
        ,t1.date_created as "dateCreated"
        ,t1.date_updated as "dateUpdated"
    </sql>

    <!-- 根据主键获取信息详情 -->
    <select id="selectByPrimaryKey" resultType="com.wu1g.vo.sys.SysNews" parameterType="com.wu1g.vo.sys.SysNews">
        select
        <include refid="Base_Column_List"/>
        ,t1.detail_info as "detailInfo"
        from sys_news t1
        where
        t1.id = #{id}
    </select>

    <!-- 新增单条数据 -->
    <insert id="insert" parameterType="com.wu1g.vo.sys.SysNews"  useGeneratedKeys="true" keyProperty="id"  >
        insert into sys_news (
         
            title 
           ,second_title 
           ,cover_pic 
           ,brief_info 
           ,detail_info 
           ,is_ontop 
           ,click_count 
           ,state 
           ,memo 
           ,version 
           ,order_no 
           ,keyword 
           ,del_flag 
           ,create_id 
           ,date_created 
           ,date_updated 
        ) values (
         
            #{title} 
           ,#{secondTitle} 
           ,#{coverPic} 
           ,#{briefInfo} 
           ,#{detailInfo} 
           ,#{isOntop} 
           ,0
           ,#{state} 
           ,#{memo} 
           ,0
           ,#{orderNo} 
           ,#{keyword} 
           ,0
           ,#{createId} 
           ,now()
           ,now()
        )
    </insert>


    <!-- 数据更新 -->
    <update id="update" parameterType="com.wu1g.vo.sys.SysNews">
        update sys_news set date_updated=now() ,version=version+1
             <if test="title!=null">,title = #{title}</if>
             <if test="secondTitle!=null">,second_title = #{secondTitle}</if>
             <if test="coverPic!=null">,cover_pic = #{coverPic}</if>
             <if test="briefInfo!=null">,brief_info = #{briefInfo}</if>
             <if test="detailInfo!=null">,detail_info = #{detailInfo}</if>
             <if test="isOntop!=null">,is_ontop = #{isOntop}</if>
             <if test="clickCount!=null">,click_count = #{clickCount}</if>
             <if test="state!=null">,state = #{state}</if>
             <if test="memo!=null">,memo = #{memo}</if>
             <if test="orderNo!=null">,order_no = #{orderNo}</if>
             <if test="keyword!=null">,keyword = #{keyword}</if>
        where
        id = #{id}
    </update>

    <!--列表通用条件-->
    <sql id="list_where_sql">
        <choose>
            <when test="delFlag!=null">
                and t1.del_flag=#{delFlag}
            </when>
            <otherwise>
                and t1.del_flag=0
            </otherwise>
        </choose>
        <if test="keyword!=null and keyword!=''">
            <![CDATA[ and t1.title like concat('%',#{keyword},'%') ]]>
        </if>
        <if test="categoryId!=null and categoryId!=0">
            <![CDATA[ and t2.category_id=#{categoryId} ]]>
        </if>
        <if test="dateBegin!=null and dateBegin!=''">
            <![CDATA[ and DATE_FORMAT(t1.date_created,'%Y-%m-%d')>=DATE_FORMAT(#{dateBegin},'%Y-%m-%d')]]>
        </if>
        <if test="dateEnd!=null and dateEnd!=''">
            <![CDATA[ and DATE_FORMAT(t1.date_created,'%Y-%m-%d')<=DATE_FORMAT(#{dateEnd},'%Y-%m-%d')]]>
        </if>
    </sql>

    <!--信息列表 分页 -->
    <select id="findDataIsPage" parameterType="com.wu1g.vo.sys.SysNews" resultType="com.wu1g.vo.sys.SysNews">
        select
        <include refid="Base_Column_List"/>
        from sys_news t1
        left join sys_news_vs_category t2 on (t2.news_id=t1.id)
        where 1=1
        <include refid="list_where_sql"/>
        GROUP BY t1.id
        order by t1.is_ontop,t1.date_created desc
    </select>

    <!--信息列表 -->
    <select id="findDataIsList" parameterType="com.wu1g.vo.sys.SysNews" resultType="com.wu1g.vo.sys.SysNews">
        select
        <include refid="Base_Column_List"/>
        from sys_news t1
        left join sys_news_vs_category t2 on (t2.news_id=t1.id)
        where 1=1
        <include refid="list_where_sql"/>
        GROUP BY t1.id
        order by t1.is_ontop,t1.date_created desc
    </select>
</mapper>