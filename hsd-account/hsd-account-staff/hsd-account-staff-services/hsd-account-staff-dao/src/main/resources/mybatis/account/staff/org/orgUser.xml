<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.hsd.account.staff.dao.org.IOrgUserDao">
    <!-- 字段列表 -->
    <sql id="Base_Column_List">
		 t1.id as "id"
        ,t1.account as "account"
        ,t1.name as "name"
        ,t1.gender as "gender"
        ,t1.cellphone as "cellphone"
        ,t1.avatar as "avatar"
        ,t1.email as "email"
        ,t1.type as "type"
        ,t1.last_login as "lastLogin"
        ,t1.count as "count"
        ,t1.state as "state"
        ,t1.eff_date as "effDate"
        ,t1.exp_date as "expDate"
        ,t1.memo as "memo"
        ,t1.version as "version"
        ,t1.order_no as "orderNo"
        ,t1.date_created as "dateCreated"
        ,t1.date_updated as "dateUpdated"
        ,t1.bi_update_ts as "biUpdateTs"
	</sql>
    <!-- 根据主键获取信息详情 -->
    <select id="selectByPrimaryKey" resultType="com.hsd.account.staff.entity.org.OrgUser" parameterType="com.hsd.account.staff.entity.org.OrgUser">
        select
        <include refid="Base_Column_List"/>
        from org_user t1
        where t1.id = #{id}
    </select>
    <!-- 新增 批量数据 -->
    <insert id="insertBatch"  >
        insert into org_user (
            account
            ,pwd
            ,name
            ,gender
            ,cellphone
            ,avatar
            ,email
            ,type
            ,last_login
            ,count
            ,state
            ,eff_date
            ,exp_date
            ,memo
            ,version
            ,order_no
            ,del_flag
            ,create_id
            ,date_created
            ,date_updated
            ,bi_update_ts
        ) values
        <foreach collection="list" item="t" separator=",">
            (
             #{t.account}
            ,#{t.pwd}
            ,#{t.name}
            ,#{t.gender}
            ,#{t.cellphone}
            ,#{t.avatar}
            ,#{t.email}
            ,#{t.type}
            ,null
            ,0
            ,#{t.state}
            ,#{t.effDate}
            ,#{t.expDate}
            ,#{t.memo}
            ,0
            ,#{t.orderNo}
            ,0
            ,#{t.createId}
            ,now()
            ,now()
            ,now()
            )
        </foreach>
    </insert>
    <!-- 新增单条数据 -->
    <insert id="insert" parameterType="com.hsd.account.staff.entity.org.OrgUser" useGeneratedKeys="true" keyProperty="id">
		insert into org_user (
            account
           ,pwd
           ,name
           ,gender
           ,cellphone
           ,avatar
           ,email
           ,type
           ,last_login
           ,count
           ,state
           ,eff_date
           ,exp_date
           ,memo
           ,version
           ,order_no
           ,del_flag
           ,create_id
           ,date_created
           ,date_updated
           ,bi_update_ts
        ) values (
            #{account}
           ,#{pwd}
           ,#{name}
           ,#{gender}
           ,#{cellphone}
           ,#{avatar}
           ,#{email}
           ,#{type}
           ,null
           ,0
           ,#{state}
           ,#{effDate}
           ,#{expDate}
           ,#{memo}
           ,0
           ,#{orderNo}
           ,0
           ,#{createId}
           ,now()
           ,now()
           ,now()
        )
	</insert>
    <!-- 数据更新 -->
    <update id="update" parameterType="com.hsd.account.staff.entity.org.OrgUser">
        update org_user set version=version+1,date_updated=now()
        <if test="name!=null">,name = #{name}</if>
        <if test="gender!=null">,gender = #{gender}</if>
        <if test="cellphone!=null">,cellphone = #{cellphone}</if>
        <if test="avatar!=null">,avatar = #{avatar}</if>
        <if test="email!=null">,email = #{email}</if>
        <if test="type!=null">,type = #{type}</if>
        <if test="state!=null">,state = #{state}</if>
        <if test="effDate!=null">,eff_date = #{effDate}</if>
        <if test="expDate!=null">,exp_date = #{expDate}</if>
        <if test="memo!=null">,memo = #{memo}</if>
        <if test="orderNo!=null">,order_no = #{orderNo}</if>
        where id = #{id}
    </update>
    <!--列表通用条件-->
    <sql id="list_where_sql">
        <choose>
            <when test="delFlag!=null">
                and t1.del_flag=#{delFlag}
            </when>
            <otherwise>
                and t1.del_flag=0
            </otherwise>
        </choose>
        <if test="keyword!=null and keyword!=''">
            and (t1.name like CONCAT('%',#{keyword},'%') or t1.account like CONCAT('%',#{keyword},'%'))
        </if>
        <if test="dateBegin!=null and dateBegin!=''">
            <![CDATA[ and DATE_FORMAT(t1.date_created,'%Y-%m-%d')>=DATE_FORMAT(#{dateBegin},'%Y-%m-%d')]]>
        </if>
        <if test="dateEnd!=null and dateEnd!=''">
            <![CDATA[ and DATE_FORMAT(t1.date_created,'%Y-%m-%d')<=DATE_FORMAT(#{dateEnd},'%Y-%m-%d')]]>
        </if>
    </sql>

    <!--信息列表 分页 -->
    <select id="findDataIsPage" parameterType="com.hsd.account.staff.entity.org.OrgUser" resultType="com.hsd.account.staff.entity.org.OrgUser">
        select
        <include refid="Base_Column_List"/>
        from org_user t1
        where t1.id!=1
        <include refid="list_where_sql"/>
        order t1.date_created desc
    </select>
    <!--信息列表 -->
    <select id="findDataIsList" parameterType="com.hsd.account.staff.entity.org.OrgUser" resultType="com.hsd.account.staff.entity.org.OrgUser">
        select
        <include refid="Base_Column_List"/>
        from org_user t1
        where t1.id!=1
        <include refid="list_where_sql"/>
    </select>
    <!--精简(分页) -->
    <select id="findBriefDataIsPage" parameterType="com.hsd.account.staff.entity.org.OrgUser" resultType="com.hsd.account.staff.entity.org.OrgUser">
        select
         t1.id as "id"
        ,t1.account as "account"
        ,t1.name as "name"
        from org_user t1
        where t1.id!=1
        <include refid="list_where_sql"/>
        order by t1.date_created desc
    </select>
    <!-- 获取用户信息>根据用户登录名 -->
    <select id="findUserByAccount" parameterType="map" resultType="com.hsd.account.staff.entity.org.OrgUser">
        select
        <include refid="Base_Column_List"/>
        ,t1.pwd as "pwd"
        from org_user t1
        where t1.del_flag=0 and t1.state=0
        and account=#{account}
        and type=#{userType}
    </select>
    <!--信息列表 分页 -->
    <select id="findUserIsPage" parameterType="com.hsd.account.staff.entity.org.OrgUser" resultType="com.hsd.account.staff.entity.org.OrgUser">
        select
        t1.id as "id"
        ,t1.account as "account"
        ,t1.name as "name"
        ,t1.gender as "gender"
        ,t1.avatar as "avatar"
        from org_user t1
        where t1.id!=1
        <include refid="list_where_sql"/>
    </select>
</mapper>
